%html
	%head
		%title Dating Game
		%link{:rel => :stylesheet, :type => :'text/css', :href => 'css/bootstrap.min.css'}
		%link{:rel => :stylesheet, :type => :'text/css', :href => 'style.css'}

		%script{:src => 'js/jquery-2.1.3.min.js'}
		%script{:src => 'js/bootstrap.min.js'}
		%script{:src => 'main.js'}

	%body
		.container
			#step-1.card
				.col-md-12
					%h2.circle 1
					%h2 Names

					%form#names.form-horizontal
						#player-inputs

						.form-group#submit
							.col-sm-8
							.col-sm-2
								%a.btn.btn-default.btn-block{:onclick => 'add_player()'} + Player
							.col-sm-2
								%a.btn.btn-primary.btn-block{:href => '#step-2', :onclick => 'check_names() && tocard(2) && choose_characters()'} Next &rarr;

			#step-2.card
				.col-md-12
					%h2.circle 2
					%h2 Characters
					%h3.subtitle Hold Down to View

				#character-list

				%br

				.col-sm-2
					%a.btn.btn-primary.btn-block{:href => '#step-1', :onclick => 'tocard(1)'} &larr; Back
				.col-sm-10

			%script setup_players()
